#!/bin/sh -ex
trap 'rm -rf "$tmp"' INT TERM EXIT HUP
tmp=$(git-hooks-workdir "$@")

cd "$tmp/doc"
notwiki-doc html /srv/http/vhost/code/notwiki .
notwiki-doc gph  /srv/gopher/notwiki .
notwiki-mandoc gph utf8 /srv/gopher/man .
notwiki-mandoc html html /srv/http/vhost/code/man .
cp style.css /srv/http/vhost/code

cd "$tmp"
make dist
cp *.tar.gz /srv/http/vhost/code/notwiki
cp *.tar.gz /srv/gopher/notwiki
